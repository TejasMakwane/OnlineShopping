@using OnlineShoppingStore1.Models.Home
@{
    ViewBag.Title = "CheckoutDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Online Shopping</title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,700' rel='stylesheet' type='text/css'>
    <link href="~/NewBoot/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/NewBoot/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NewBoot/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <link href="~/NewBoot/css/flexslider.css" rel="stylesheet">
    <link href="~/NewBoot/css/templatemo-style.css" rel="stylesheet">



    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="tm-gray-bg">

    <section class="container tm-home-section-1" id="more">


        <div class="section-margin-top">
            <div class="row">
                <div class="tm-section-header">
                    <div class="col-lg-3 col-md-3 col-sm-3"><hr></div>
                    <div class="col-lg-6 col-md-6 col-sm-6"><h2 class="tm-section-title">Chekout Product</h2></div>
                    <div class="col-lg-3 col-md-3 col-sm-3"><hr></div>
                </div>
            </div>
        </div>
    </section>


    <div class='container'>
        <div class='row'>
          
                <div id='mainContentWrapper'>
                    <div class="col-md-8 col-md-offset-2">
                        <h2 style="text-align: center;">
                            Review Your Order & Complete Checkout
                        </h2>

                        <br />
                        <div class="shopping_cart">
                           

                                <div class="panel panel-default">

                                    <div id="collapseOne" class="panel-collapse collapse in">
                                        <div class="panel-body">
                                            <div class="items">
                                                <div class="col-md-9">


                                                    @if (Session["cart"] == null)
                                                    {
                                                        <div class="alert alert-danger">
                                                            <strong>
                                                                No Product Added Into Cart...!

                                                            </strong>

                                                        </div>
                                                    }
                                                    else
                                                    {
                                                       
                                                            <div class="container">

                                                                <table>

                                                                    <thead>

                                                                        <tr>

                                                                            <th><h2>Product Name :</h2></th>


                                                                        </tr>

                                                                        <br>
                                                                    </thead>


                                                                    <tbody>


                                                                        @{
                                                                            int Total = 0;
                                                                            string productname = null;
                                                                        }

                                                                     

                                                                        @foreach (item let in (List<item>)Session["cart"])
                                                                        {
                                                                            int LineTotal = Convert.ToInt32(let.Quantity * let.Product.Price);
                                                                            Total = Convert.ToInt32(@Total + LineTotal);


                                                                            <tr>
                                                                                <td><h4>@let.Product.ProductName</h4></td>

                                                                                @*@using (Html.BeginForm())
                                                                                {
                                                                                    @Html.AntiForgeryToken()


                                                                                    Session["productname"] = Session["productname"] + let.Product.ProductName ;

                                                                                }*@


                                                                                @using (Html.BeginForm())
                                                                                {
                                                                                    @Html.AntiForgeryToken()


                                                                                    productname = productname + let.Product.ProductName;
                                                                                    Session["productname"] = productname;

                                                                                }


                                                                               
                                                                            </tr>

                                                                            


                                                                        }
                                                                       




                                                                        @using(Html.BeginForm())
                                                                        {
                                                                            @Html.AntiForgeryToken()
                                                                      
                                                                          
                                                                             Session["total"]=Total;
                                                                             
                                                                        }
                                                                       
                                                                    </tbody>

                                                                </table>


                                                            </div>

                                                            <div class="col-md-4" style="margin-left:450px">
                                                                <div style="text-align: center;">
                                                                    <strong><h3>Total Order</h3></strong>
                                                                    <h3><span style="color:green;">Rs. @Total/-</span></h3>
                                                                </div>
                                                            </div>
                                                            
                                                            
                                                            

                                                          
                                                            @*<script src="//checkout.stripe.com/v2/checkout.js"
                                                                    class="stripe-button"
                                                                    data-key="pk_test_ESolMB8bvaKArbLcUWeKC8ll00fqElMlGy"
                                                                    data-locale="auto"
                                                                    data-description="Shopping Payment"
                                                                    data-Currency="inr"
                                                                     data-amount=@Total>


                                                          

                                                            </script>*@

                                                            <div class="col mb-2">
                                                                <div class="row">

                                                                    <div class="col-sm-12 pull-right">


                                                                        <a href="/Home/ShippingDetails" class="btn btn-lg btn-info text-uppercase"><b></b>Continue</a>
                                                                    </div>



                                                                </div>
                                                            </div>
                                                      


                                                       
                                                    

                                                    }

                                                 


                                                </div>
                                                
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            


                            @*<div class="panel panel-info">
                                <div class="panel-heading">


                                    <a href="~/Home/CheckoutDetails">
                                        <strong class="text-uppercase">Make payment</strong>

                                    </a>
                                </div>

                            </div>*@
                        </div>



                    </div>
                </div>

            
        </div>
    </div>


</body>
</html>







