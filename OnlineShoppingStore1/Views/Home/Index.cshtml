    <section class="container tm-home-section-1" id="more">


        <div class="section-margin-top">
            <div class="row">
                <div class="tm-section-header">
                    <div class="col-lg-3 col-md-3 col-sm-3"><hr></div>
                    <div class="col-lg-6 col-md-6 col-sm-6"><h2 class="tm-section-title">Booking Product</h2></div>
                    <div class="col-lg-3 col-md-3 col-sm-3"><hr></div>
                </div>
            </div>
        </div>

        <div class="jumbotron" style="border-bottom-left-radius:40px; border-bottom-right-radius:40px">
            <div class="row product-container">



                @foreach (var item in Model.ListProducts)
                {
                    <div class="col-md-3 col-sm-3 col-xs-3" style="margin-bottom:8px;">
                        <div class="thumbnail product-item" style="height:472px; border-bottom-left-radius:30px;border-bottom-right-radius:30px">


                            
                               <a href="@Url.Action("ProductDetails", "Home", new { productId = item.ProductId })">
                                   <img class="img-responsive" title="Click To view Product Details"
                                        style="cursor:pointer; height:200px; width:100%"
                                        src="~/ProductImages/@item.ProductImage" />

                               </a>
                          
                           
                                  


                                <div class="caption">
                                    <div class="tm-home-box-2-container">
                                        <a href="#" class="tm-home-box-2-link"><i class="fa fa-heart tm-home-box-2-icon border-right"></i></a>
                                        <a href="#" class="tm-home-box-2-link"><span class="tm-home-box-2-description">Book</span></a>

                                    </div>
                                    <h5>@item.ProductName</h5>
                                    <p>Rs.@item.Price</p>

                                    <p>
                                        @if (item.Quantity > 0)
                                        {
                                        <p>Available</p>
                                            using (Html.BeginForm("AddToCart", "Home", new { productId = item.ProductId }, FormMethod.Post))
                                            {
                                                <button type="submit" class="btn btn-block btn-lg " style="background-color:gray; border-bottom-left-radius:15px; border-bottom-right-radius:15px; width:210px;height:45px; border-left-width:10px;color:aliceblue">
                                                    ADD TO CART
                                                    &nbsp;  <span class="fa fa-shopping-cart"></span>
                                                </button>
                                            }


                                        }
                                        else
                                        {
                                            <p> Not-Available</p>

                                        }
                                        </p>

                                        <div class="product-item-badge">

                                            @if (item.IsFeatured == true)
                                            {
                                                <p><h6 style="width:20px; height:0.5px">New</h6></p>
                                            }
                                            else
                                            {
                                                <p><h6 style="width:20px; height:0.5px">Old</h6></p>

                                            }

                                        </div>

                                    </div>

                                    @*<img src="~/Images/mobile2.jpg" />
                <img src="~/Images/mobile3.jpg" />
                <img src="~/Images/mobile4.jpg" />*@
</div>
