@using OnlineShoppingStore1.Models.Home
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link href="~/CheckCSS/StyleSheet1.css" rel="stylesheet" />

<br>
<br />


    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Online Shopping</title>

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,700' rel='stylesheet' type='text/css'>
    <link href="~/NewBoot/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/NewBoot/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NewBoot/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
    <link href="~/NewBoot/css/flexslider.css" rel="stylesheet">
    <link href="~/NewBoot/css/templatemo-style.css" rel="stylesheet">



    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->


   
    <div class="container">

        <div class="jumbotron">

            @if (Session["cart"] == null)
            {
                <div class="alert alert-danger">
                    <strong>
                        No Product Added Into Cart...!

                    </strong>

                </div>
            }
            else
            {    <body>




                @foreach (item let in (List<item>)Session["cart"])
                {
                    int LineTotal = Convert.ToInt32(let.Quantity * let.Product.Price);







                    <div style="height:10%">
                        @*<div class="panel panel-info">*@

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-2">

                                    <img class="img-responsive" src="~/ProductImages/@let.Product.ProductImage">

                                </div>
                                <div class="col-xs-4">
                                    <h4 class="product-name"><strong>@let.Product.ProductName</strong></h4>@*<h4><small>Product description</small></h4>*@
                                </div>
                                <div class="col-xs-6">
                                    <div class="col-xs-4 text-right">
                                        <strong>@let.Product.Price<span class="text-muted">&nbsp; &nbsp;x</span></strong>
                                    </div>
                                    <div class="col-xs-1">

                                        <strong>@let.Quantity<span class="text-muted"></span></strong>
                                    </div>

                                    <div class="col-xs-2">

                                        <strong>@LineTotal<span class="text-muted"></span></strong>
                                    </div>

                                    <div class="col-xs-2">
                                        <a href="@Url.Action("IncreaseQuantity", "Home", new { productId = let.Product.ProductId,url="Checkout" })">

                                            <i class="fa fa-plus"></i>
                                        </a>
                                        <a href="@Url.Action("DecreaseQuantity", "Home", new { productId = let.Product.ProductId,url= "Checkout" })">
                                            <i class="fa fa-minus"></i>
                                        </a>

                                        <hr />

                                    </div>


                                    <div class="col-xs-2">

                                        <a href="@Url.Action("RemoveToCartCheckout", "Home", new { productId = let.Product.ProductId,url="Checkout" })">

                                            <span class="glyphicon glyphicon-trash"> </span>
                                        </a>


                                    </div>
                                </div>
                            </div>



                        </div>


                    </div>










                }


            </body>

            }

            <hr>

            <div class="row">
                
                    
                <div class="text-center">

                    <div class="col-xs-9">
                        
                        <h4 class="text-right"><strong>Added Items?</strong></h4>
                    </div>
                    <div class="col-xs-3">

                        <a href="~/Home/Index">
                            <button type="button" class="btn btn-primary btn-sm btn-block">
                                <span class="glyphicon glyphicon-share-alt"></span>Update cart
                            </button>

                        </a>
                      


                    </div>
                    


                </div>

               
            </div>
           
        </div>
        <div class="text-right pull-right">


            <a href="/Home/CheckoutDetails" class="btn btn-lg btn-info text-uppercase" pull-right"><b></b>Checkout</a>
        </div>




</div>













   













