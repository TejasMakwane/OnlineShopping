@using OnlineShoppingStore1.Models.Home
@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/CheckCSS/StyleSheet1.css" rel="stylesheet" />

<br>
<br />


<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Online Shopping</title>

<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,600,700' rel='stylesheet' type='text/css'>
<link href="~/NewBoot/css/font-awesome.min.css" rel="stylesheet">
<link href="~/NewBoot/css/bootstrap.min.css" rel="stylesheet">
<link href="~/NewBoot/css/bootstrap-datetimepicker.min.css" rel="stylesheet">
<link href="~/NewBoot/css/flexslider.css" rel="stylesheet">
<link href="~/NewBoot/css/templatemo-style.css" rel="stylesheet">





<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

<section class="container tm-home-section-1" id="more">


    <div class="section-margin-top">
        <div class="row">
            <div class="tm-section-header">
                <div class="col-lg-3 col-md-3 col-sm-3"><hr></div>
                <div class="col-lg-6 col-md-6 col-sm-6"><h2 class="tm-section-title">Product Details</h2></div>
                <div class="col-lg-3 col-md-3 col-sm-3"><hr></div>
            </div>
        </div>
    </div>
</section>


   <div class="container">

        <div class="jumbotron">


            <div style="height:10%">
                @*<div class="panel panel-info">*@

                <div class="panel-body">
                    <div class="row">

                        <h2><strong>Product Name:&nbsp;&nbsp;&nbsp;@ViewBag.productname &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Descriptions:@ViewBag.productdesc</strong></h2>




                        <h2><strong>Date:&nbsp;&nbsp;&nbsp;@ViewBag.productdate</strong></h2>

                        <div class="col-md-2">

                            <img class="img-responsive" src="~/ProductImages/@ViewBag.productimage">
                            <strong>Rs.&nbsp;&nbsp;@ViewBag.productprice<span class="text-muted"></span></strong>
                           

                            @using (Html.BeginForm("AddToCart", "Home", new { productId = ViewBag.productid }, FormMethod.Post))
                            {
                                <button type="submit" class="btn  btn-lg " style="background-color:gray; color:aliceblue">
                                    ADD TO CART
                                    &nbsp;  <span class="fa fa-shopping-cart"></span>
                                </button>
                            }


                        </div>


                    </div>
                </div>



            </div>


        </div>


        <hr>



    </div>













